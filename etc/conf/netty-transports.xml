<transports>
    <listener
            id="jaxrs-http"
            host="127.0.0.1"
            port="7777"
            bossThreadPoolSize="2"
            workerThreadPoolSize="250"
            execHandlerThreadPoolSize="60"/>

    <listener
            id="jaxrs-https"
            host="127.0.0.1"
            port="8888"
            bossThreadPoolSize="2"
            workerThreadPoolSize="250"
            execHandlerThreadPoolSize="60"
            scheme="https"
            keystoreFile="repository/resources/security/cert.jks"
            keystorePass="secret"
            certPass="secret"/>
</transports>